<!-- Members Main Content -->
<div class="main-content">

    <!-- Welcome Header -->
    <header>
        <h2 class="user-name">WELCOME <span class="member-name">USER</span></h2>
    </header>

    <!-- Mood Emoji Box -->
    <div class="box mood-box">
        <h4 class="mood-title">How are you feeling today?</h4>
        <div class="mood-buttons">
            <div class="mood-label">
                <button type="button" class="btn mood" id="mood1" aria-label="really-sad"><span>1</span></button>
                <p>low</p>
            </div>
            <button type="button" class="btn mood" id="mood2" aria-label="sad"><span>2</span></button>
            <button type="button" class="btn mood" id="mood3" aria-label="indifferent"><span>3</span></button>
            <button type="button" class="btn mood" id="mood4" aria-label="happy"><span>4</span></button>
            <div class="mood-label">
                <button type="button" class="btn mood" id="mood5" aria-label="really-happy"><span>5</span></button>
                <p>high</p>
            </div>
        </div>
    </div>

    <!-- Written Check In -->
    <div class="box">
        <!-- Title -->
        <h4 class="checkin-title">Check In:</h4>
        <form>
            <!-- Text Input -->
            <input type="text" placeholder="Today was really...">
            <!-- Sobriety Check -->
            <div class="checkbox">
                <input type="checkbox" value="soberYN"> <label for="soberYN">Didn't Drink</label>
            </div>
            <!-- Submit Btn -->
            <button class="btn sober-btn">Submit</button>
        </form>
    </div>
</div>