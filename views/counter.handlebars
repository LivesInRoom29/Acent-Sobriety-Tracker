      </li>
      <!-- journal -->
      <li class="nav-item">
        <a class="nav-link" href="/journal">
          journal
        </a>
      </li>
      <!-- logout button -->
      <li class="nav-item">
        <a class="nav-link" href="/logout">
          <button type="button" class="btn btn-outline-light nav-link">
