<main role="main" class="flex-shrink-0">
  <!-- container for the counter -->
  <div class="container">
    <div class="row align-items-center justify-content-center" id="counter">
      <!-- Pie chart will be inserted into this div -->
      <div id="responsive-chart"></div>
      {{!-- trasparent overlay and logo --}}
      <div class="rounded-circle chart-inner"></div>
      <img id="mtn-img" class="mx-auto" src="./img/sober-icon.png" alt="mountain-logo">
      <!-- how many days sober -->
      <p class="days-sober mx-auto">{{daysSober}}</p>
    </div>
  </div>

  <!-- Container for Days Until Next Badge + badges -->
  <div class="container days-until text-center">
    <div class="row text-center">
      <div class="stars-container">
        {{!-- <p class="align-middle"><span id="time-left">{{days}}</span> Days Until Next Badge <span class="star"><i
            class="fas fa-star"></i></span></p> --}}
      </div>
    </div>
  </div>

  <!-- Inspirational quote -->
  <div class="quote-container container">
    <p class="quote">{{quote}}</p>
    <p class="quote-author">- {{author}}</p>
  </div>
</main>

<!-- mobile menu -->
<footer class="navbar fixed-bottom">
  <div class="container footer">
    <a href="/counter" class="foot-icon"><i class="fas fa-user-circle"></i></a>
    <a href="/resources" class="foot-icon"><i class="fas fa-book-open"></i></a>
    <a href="/journal" class="foot-icon"><i class="far fa-comments"></i></a>
    <a href="/logout" class="foot-icon"><i class="fas fa-sign-out-alt"></i></a>
  </div>
</footer>


