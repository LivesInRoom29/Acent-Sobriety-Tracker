<div class="d-flex flex-column h-100">
<!-- Navbar -->
  <nav class="navbar navbar-expand-lg" role="navigation">
    <!-- Logo -->
    <div class="navbar-brand text-center">
      <img SRC="img/logo-white.png" alt="mountain logo" class="logo">
      <h1>ASCENT</h1>
    </div>
    <!-- toggle icon -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menuList"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- menu list -->
    <div class="collapse navbar-collapse" id="menuList">
      <ul class="navbar-nav my-2 my-lg-0">
        <!-- resources -->
        <li class="nav-item">
          <a class="nav-link" href="/resources">
            resources
          </a>
        </li>
        <!-- journal -->
        <li class="nav-item active">
          <a class="nav-link" href="/journal">
            journal
          </a>
        </li>
        <!-- logout button -->
        <button type="button" class="btn btn-outline-light nav-link">
          logout
        </button>
      </ul>
    </div>
  </nav>

  <main role="main" class="flex-shrink-0">
    <!-- container for the counter -->
    <div class="container">
      <div class="row align-items-center justify-content-center" id="counter">
        <!-- Pie chart will be inserted into this div -->
        <div id="responsive-chart"></div>
        {{!-- trasparent overlay and logo --}}
        <div class="rounded-circle chart-inner"></div>
        <img id="mtn-img" class="mx-auto" src="./img/logo-white.png" alt="mountain-logo">
        <!-- how many days sober -->
        <p class="days-sober mx-auto">{{daysSober}}</p>
      </div>
    </div>

    <!-- Container for Days Until Next Badge + badges -->
    <div class="container days-until text-center">
      <div class="row text-center">
        <p class="align-middle"><span id="time-left">{{days}}</span> Days Until Next Badge <span class="star"><i class="fas fa-star"></i></span></p>
      </div>
    </div>

    <!-- Inspirational quote -->
    <div class="quote-container container">
      <p class="quote">{{quote}}</p>
      <p class="quote-author">- {{author}}</p>
    </div>
  </main>

  <!-- footer -->
  <footer class="navbar fixed-bottom">
    <div class="container">
      <!-- <i class="fas fa-user-circle"></i>
              <i class="fas fa-book-open"></i>
              <i class="far fa-comments"></i> -->
      <a href="/"><img class="icon" src="./img/icons/account.png" alt="account icon"></a>
      <a href="/resources"><img class="icon" src="./img/icons/resources.png" alt="resources icon"></a>
      <a href="/"><img class="icon-connect" src="./img/icons/connect.png" alt="connect icon"></a>
      <a href="/journal"><img class="icon" src="./img/icons/notepad.png" alt="notepad icon"></a>
    </div>
  </footer>


  <!-- momentjs -->
  <script src="https://cdnjs.cloudflare.com/ajafx/libs/moment.js/2.25.1/moment.min.js"></script>

  <!-- jquery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous">
    </script>

  <!-- Apex charts (can also do npm install) -->
  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

  <script src="js/counter.js"></script>
</body>

</div>

